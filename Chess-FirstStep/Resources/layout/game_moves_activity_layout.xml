<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

     <!-- Exit button -->
    <ImageButton
        android:id="@+id/btnExitGameMoves"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/exit"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="description" />

    <!-- Chessboard -->
    <TableLayout
        android:id="@+id/chessboardLayoutGameMoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">
    </TableLayout>


    <!-- Navigation Arrows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Left Arrow -->
        <ImageButton
            android:id="@+id/leftArrowImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/left_arrow_chess"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter" />

        <!-- Right Arrow -->
        <ImageButton
            android:id="@+id/rightArrowImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/right_arrow_chess"
            android:layout_marginLeft="16dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

</LinearLayout>
