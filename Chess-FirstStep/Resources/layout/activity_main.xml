<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_chess">

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnTwoPlayerGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two-Player Game"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/btnAiGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Against AI"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnOnlineGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Game"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

     <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
